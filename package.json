{
  "name": "playwright-sample-visual-testing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "npx playwright test",
    "test:update": "npx playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.ts --max-warnings=0",
    "style": "stylelint \"**/*.css\" || echo 'No CSS files found'",
    "accessibility": "playwright test tests/accessibility",
    "visual": "playwright test tests/visual",
    "e2e": "playwright test tests/e2e",
    "unit": "jest --coverage",
    "flaky": "playwright test --retries=2 --workers=1",
    "mutation": "stryker run",
    "ci-local": "npm run lint && npm run style && npm run accessibility && npm run visual && npm run e2e && npm run unit && npm run flaky && npm run mutation"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.55.0",
    "@stryker-mutator/core": "^6.3.1",
    "@stryker-mutator/jest-runner": "^6.3.1",
    "axe-core": "^4.9.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "jest": "^29.7.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.14"
  }
}
